ELEMENT:
CLS
DIM E$(5)
E$ = {"PB", "O", "C", "N", "HE",}
DIM N$(5)
N$ = {"LEAD", "OXYGEN", "CARBON", "NITROGEN", "HELIUM"}
A = INT(RAND * 4)
PRINT "WHAT ELEMENT IS REPRESENTED BY ";
PRINT E$[A];
PRINT "? (CAPITALS ONLY)"
INPUT " ", G$
IF N$[A] = G$ THEN PRINT "CORRECT" 
IF N$[A] <> G$ THEN PRINT "INCORRECT"
IF N$[A] <> G$ THEN SOUND(440, 1000)
GOTO ELEMENT
 






